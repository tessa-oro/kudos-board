generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model KudosCard {
  id Int @id @default(autoincrement())
  title String
  category String
  author String
}

model KudosPost {
  id Int @id @default(autoincrement())
  message String
  gif String
  card Card @relation(fields: [cardId], references:[id])
  votes Int
  cardId Int
}